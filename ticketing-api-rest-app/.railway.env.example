# Railway Environment Variables Template
# Copy this file to .railway.env and fill in your values
# Then upload with: railway variables --set-from-file .railway.env

# Application
APP_NAME="Plateforme de gestion des tickets"
APP_ENV=production
APP_KEY=  # Generate with: railway run php artisan key:generate
APP_DEBUG=false
APP_URL=  # Will be: https://your-service.up.railway.app
CLIENT_APP_URL=  # Your frontend URL

# Database (Auto-configured by Railway when you add PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_DATABASE=${{Postgres.PGDATABASE}}
DB_USERNAME=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# Mail Configuration (REQUIRED for email notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.titan.email
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@example.com
MAIL_FROM_NAME="${APP_NAME}"

# SMS Provider Configuration (REQUIRED for SMS notifications)
SMS_PROVIDER=custom_api
SMS_PROVIDER_URL=https://api.e-mc.co/v3
SMS_PROVIDER_API_ACCOUNT_ID=your-account-id
SMS_PROVIDER_API_ACCOUNT_PASSWORD=your-account-password
SMS_PROVIDER_API_KEY=your-api-key

# Alert Configuration
SMS_ALERT_THRESHOLD=1000
ALERT_EMAIL=email1@example.com,email2@example.com
ALERT_SMS=phone1,phone2

# Laravel Passport OAuth Credentials
PASSPORT_GRANT_ACCESS_CLIENT_ID=your-grant-client-id
PASSPORT_GRANT_ACCESS_CLIENT_SECRET=your-grant-client-secret
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=your-personal-client-id
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=your-personal-client-secret

# CinetPay Payment Gateway (Production)
CINETPAY_API_KEY=your-cinetpay-api-key
CINETPAY_SITE_ID=your-cinetpay-site-id
CINETPAY_SECRET_KEY=your-cinetpay-secret-key
CINETPAY_API_URL=https://api-checkout.cinetpay.com/v2/payment
CINETPAY_MODE=production
CINETPAY_API_CHECK=https://api-checkout.cinetpay.com/v2/payment/check
CINETPAY_DEMO_URL=https://cinetpay.com/demo

# FedaPay Payment Gateway (Live)
FEDAPAY_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
FEDAPAY_SECRET_KEY=sk_live_xxxxxxxxxxxxx
FEDAPAY_WEBHOOK_SECRET=wh_live_xxxxxxxxxxxxx
FEDAPAY_ENVIRONMENT=live
FEDAPAY_CURRENCY=XOF

# Token Encryption
TOKEN_ENCRYPTION_KEY=  # Generate with: php artisan key:generate
TOKEN_ENCRYPTION_METHOD=AES-256-CBC

# OTP Settings
OTP_EXPIRATION_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Subscription Settings
SUBSCRIPTION_PRICE_PER_YEAR=50000
SUBSCRIPTION_CURRENCY=XOF

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_STACK=single

# Other Settings
BCRYPT_ROUNDS=12
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
