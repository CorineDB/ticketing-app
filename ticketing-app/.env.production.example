# API Configuration
# Pour backend local (développement):
VITE_API_URL=http://localhost:8000/api

# Pour backend local exposé avec ngrok:
# VITE_API_URL=https://your-ngrok-url.ngrok.io/api

# Pour backend déployé (production):
# VITE_API_URL=https://your-backend-api.railway.app/api
# VITE_API_URL=https://your-backend-api.onrender.com/api
# VITE_API_URL=https://your-backend-api.fly.dev/api

# Payment Gateways (Production)
VITE_CINETPAY_API_KEY=your_cinetpay_api_key
VITE_CINETPAY_SITE_ID=your_cinetpay_site_id

# Optional Payment Gateways
VITE_PAYDUNYA_API_KEY=your_paydunya_key
VITE_MTN_MOMO_API_KEY=your_mtn_key

# Feature Flags
VITE_ENABLE_MULTI_ORG=true
VITE_ENABLE_CASH_PAYMENTS=true
VITE_BETA_FEATURES=false

# Optional: Monitoring (si vous utilisez)
# VITE_SENTRY_DSN=
# VITE_GA_TRACKING_ID=

# Environment
NODE_ENV=production
